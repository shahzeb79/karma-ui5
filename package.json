{
  "name": "karma-ui5",
  "description": "A Karma plugin for UI5",
  "version": "1.0.1",
  "author": "SAP SE (https://www.sap.com)",
  "license": "Apache-2.0",
  "homepage": "https://github.com/SAP/karma-ui5",
  "bugs": "https://github.com/SAP/karma-ui5/issues/",
  "keywords": [
    "ui5",
    "openui5",
    "sapui5",
    "karma-adapter",
    "karma-plugin"
  ],
  "engines": {
    "node": ">= 8.5",
    "npm": ">= 5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/karma-ui5.git"
  },
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "lint": "eslint ./",
    "lint-fix": "eslint ./ --fix",
    "test": "npm run lint && npm run unit-coverage && npm run integration",
    "unit": "jest test/framework.test.js",
    "unit-coverage": "jest test/framework.test.js --coverage",
    "integration": "jest test/integration.test.js",
    "prepare": "webpack",
    "preversion": "npm test",
    "version": "git-chglog --next-tag v$npm_package_version -o CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push --follow-tags",
    "release-note": "git-chglog -c .chglog/release-config.yml v$npm_package_version"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__mocks__/",
      "/^integration$/"
    ]
  },
  "peerDependencies": {
    "karma": ">= 1.7.1"
  },
  "dependencies": {
    "@ui5/fs": "^1.1.2",
    "@ui5/project": "^1.1.0",
    "@ui5/server": "^1.3.0",
    "http-proxy": "^1.17.0",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@openui5/sap.ui.core": "^1.68.1",
    "es6-promise": "^4.2.8",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-plugin-jest": "^22.14.1",
    "eslint-plugin-jsdoc": "^15.8.0",
    "execa": "^2.0.3",
    "istanbul-lib-coverage": "^2.0.5",
    "jest": "^24.8.0",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-edge-launcher": "^0.4.2",
    "karma-ie-launcher": "^1.0.0",
    "karma-qunit": "^4.0.0",
    "license-webpack-plugin": "^2.1.1",
    "lodash.assign": "^4.2.0",
    "puppeteer": "^1.19.0",
    "qunit": "^2.9.2",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
